{
  "name": "@horizon/design-system",
  "version": "0.1.0",
  "description": "Horizon Design System - A comprehensive design system for React applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ODYSSEY-BSSM/horizon-shared-ui.git"
  },
  "keywords": [
    "react",
    "design-system",
    "ui",
    "components",
    "horizon"
  ],
  "author": "ODYSSEY-BSSM",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "eslint src/**/*.ts*",
    "test": "jest --passWithNoTests",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "peerDependencies": {
    "@emotion/react": "^11.10.6",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@configs/eslint": "workspace:*",
    "@configs/tsconfig": "workspace:*",
    "@emotion/react": "^11.14.0",
    "@types/react": "^18.3.21",
    "react": "^18.2.0",
    "tsup": "^6.7.0"
  }
}
